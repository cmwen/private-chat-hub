---
import { SITE } from 'astro:env/server';
const { title } = Astro.props;
const getLink = (path) => {
  const base = import.meta.env.BASE_URL;
  if (path === '/') return base.endsWith('/') ? base : base + '/';
  return base + path.replace(/^\//, '');
};
